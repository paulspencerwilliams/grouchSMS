<h2>Sign up yo!</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: "form-control" %></div>

  <div><%= f.label :password %> <% if @validatable %><i>(<%= @minimum_password_length %> characters minimum)</i><% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control" %></div>

  <div><%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %></div>

  <div>
    <%= f.label :phone %><br />
    <%= f.text_field :phone, class: "form-control" %>
  </div>

  <div>
    <%= f.label :stravaid, "Strava ID" %><br/>
    <%= f.text_field :stravaid, class: "form-control" %>
  </div>

  <div>
    <%= f.label :twitterhandle, "Twitter handle" %><br/>
    <%= f.text_field :twitterhandle, class: "form-control" %>
  </div>

  <div>
    <%= f.label :weather do %>
      <%= f.check_box :weather, class: "form-control" %>
      Do you want weather notifications?
    <% end %>
  </div>

  <div><%= f.submit "Sign up", class: "btn btn-default" %></div>
<% end %>

<%= render "devise/shared/links" %>
